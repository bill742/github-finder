    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
